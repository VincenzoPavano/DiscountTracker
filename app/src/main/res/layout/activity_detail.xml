<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/default_gap"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_company"
        style="@android:style/TextAppearance.Material.Display1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/button_call"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_phone"
        android:text="@string/detail_call"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/button_map"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_company" />

    <Button
        android:id="@+id/button_map"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_place"
        android:text="@string/detail_map"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/button_website"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_call"
        app:layout_constraintTop_toBottomOf="@+id/text_company" />

    <Button
        android:id="@+id/button_website"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_public"
        android:text="@string/detail_website"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_map"
        app:layout_constraintTop_toBottomOf="@+id/text_company" />

    <TextView
        android:id="@+id/text_title_description"
        style="@android:style/TextAppearance.Material.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="@string/detail_description"
        app:layout_constraintTop_toBottomOf="@+id/button_map" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_title_description" />

</android.support.constraint.ConstraintLayout>